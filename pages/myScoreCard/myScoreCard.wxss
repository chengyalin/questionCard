canvas{
  position: fixed;
  top: 0;
  left: 400px;
}
.shengchengtu{
  position: absolute;
  bottom: 100rpx;
  width: 70%;
  left: 15%;
  height: 100rpx;
  line-height: 100rpx;
}
.preview {
  width: 100%;
  height: 100%;
  background: #304d64;
  position: absolute;
  z-index: 2;
}
.preview image{
  width: 94%;
  position: absolute;
  top: 3%;
  left: 3%;
  z-index: 3;
  border: 1px dashed #fff;
}


