/* pages/canvas/canvas.wxss  */

canvas {
  position: fixed;
  top: 0;
  left: 0;
  border: 1 px solid red;
}

page {
  width: 100%;
  height: 100%;
  background: #304d64;
}

.canvasBox {
  position: relative;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.canvasMain {
  width: 94%;
  height: 520px;
  border: 1px dashed #fff;
}

.preview {
  position: relative;
}

.imageBg {
  position: absolute;
  left: 50%;
  margin-left: -140px;
  width: 280px;
  height: 450px;
}

.imageTitle {
  position: absolute;
  z-index: 2;
  width: 240px;
  height: 150px;
  left: 50%;
  margin-left: -120px;
  top: 50px;
}

.userScoreInfo {
  width: 70%;
  position: absolute;
  top: 240px;
  left: 20%;
}

.shareFriendBtn, saveImgBtn, .shareFriend, .saveImg {
  position: absolute;
  bottom: 20px;
  width: 95px;
  height: 34px;
  z-index: 1;
}

.shareFriend {
  left: 10%;
}

.saveImg {
  right: 10%;
}

.shareFriendBtn {
  z-index: 2;
  border: none;
  background: no-repeat;
  left: 10%;
}

.saveImgBtn {
  position: absolute;
  bottom: 20px;
  width: 93px;
  height: 32px;
  line-height: 32px;
  font-size: 12px;
  z-index: 2;
  background: #3686ff;
  border: 1px solid #3686ff;
  border-radius: 4px;
  color: #fff;
  right: 10%;
}
