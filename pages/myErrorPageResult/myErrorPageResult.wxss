page {display: block;min-height: 100%;background-color: #3686ff;}
.bottombg{display: block;width: 630rpx;height: 233rpx;position: fixed;left: 0;bottom: 0;z-index: -1;}


.questionMain{padding: 40rpx 40rpx 0;}

.questionMain{padding: 40rpx;}

.questionVariety{padding: 20rpx 30rpx;color: #fff;font-size: 32rpx;height: 40rpx;line-height: 40rpx;}
.questionType{}
.allQuesstion{width:300rpx;float: right;text-align: right;}
.questionIcon{display: inline-block;width: 40rpx;height: 40rpx;vertical-align: middle;margin-top: -4rpx;}

.questionMain{margin: 30rpx;padding:50rpx 30rpx; background-color: #fff;border-radius:20rpx;}
.questionBox{}
.question{margin: 30rpx 0;font-size: 32rpx;line-height: 40rpx;color: #000;}
.answer{line-height: 60rpx;margin:30rpx 0; font-size: 30rpx;color: #4B4B4B;}
.answer.active .choose{background-color: #3686ff;color: #fff;border-radius: 50%;}
.choose{display: inline-block;width: 60rpx;height: 60rpx;line-height: 60rpx;margin-right: 3px;text-align: center;font-size: 18px;color: #3686ff;}
.chooseWord{color: #6c6c6c;font-size: 16px;}

.btnBox{border-top: 1px solid #f0f0f0;margin: 20rpx 0;padding: 30rpx 0;}
.rightResult{font-size:30rpx;color: #010101;}
.rightChoose{color: #3686ff;font-size: 40rpx;padding: 0 20rpx;}
.myResult{float: right;font-size: 30rpx;color: #010101;}
.rightChooseF{color: #fac1bf;font-size: 40rpx;padding: 0 20rpx;}


/* 讨论区 */
.discussBox{background-color: #fff;height: auto;overflow: hidden;}
.discussAreaBtnArea{width: 100%; height: 100rpx; position: relative;}
.discussAreaBtn{height: 100rpx;line-height: 100rpx; border-radius: 0;background-color: #fff;font-size: 32rpx;color: #3686ff;border: none;box-shadow:2px 4px 13px rgba(3,157,255,0.14);}
.upIcon{display: block;width: 36rpx;height: 36rpx; position: absolute;right:50rpx;top:30rpx;}
.downIcon{display: none;width: 36rpx;height: 36rpx; position: absolute;right:50rpx;top:30rpx;}

.commentList{padding-bottom: 120rpx;}
.commentsBox{padding: 40rpx;border-bottom: 1px solid #DCDCDC;height: auto;overflow: hidden;}

.commentsArea{}
.leftArea{width: 90rpx;float: left;}
.leftArea .leftUserIcon{display: block;width: 90rpx;height: 90rpx;border-radius: 50%;}

.rightArea{width: 550rpx;float: right;}
.userName{font-size: 24rpx;color: #3686ff;}
.dataTime{font-size: 20rpx;color: #747474;float: right;}
.commentInfoWord{font-size: 26rpx;color: #4f4f4f;line-height:42rpx;}

.writeWord{width:750rpx;height:120rpx; background:#fff;box-shadow:0px 1px 21px rgba(54,134,255,0.15);position: fixed;left: 0;bottom: 0;}
.write{display: block; width:620rpx;padding: 14rpx 30rpx; height:26rpx;font-size: 26rpx; background:rgba(173,173,173,1);opacity:0.1;border-radius:32px;color: #000;margin: 20rpx 36rpx;}


