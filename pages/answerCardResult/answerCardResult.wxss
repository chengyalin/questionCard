/* pages/answerCardResult/answerCardResult.wxss */

 page {display: block;min-height: 100%;background-color: #3686ff;overflow: hidden;}
.bottombg{display: block;width: 630rpx;height: 233rpx;position: fixed;left: 0;bottom: 0;z-index: -1;}

.getUserInfoBox{background-color: #fff;padding: 70rpx 10rpx;margin: 30rpx;border-radius: 20rpx;}
.userInfoBox {width: 100%; }
/* 圆形进度条 */
.circleBar{width: 100%; height: auto;overflow: hidden;position: relative;}
.cir{display: inline-block;background-color:#fff;border-radius:100%; } 
.top{text-align:center;}
.centerWord{width: 100%; position: absolute;top:85rpx;left: 0;text-align: center;color: #3686ff;}




.userinfoNickname {text-align: center;font-size: 48rpx;color: #3686ff;margin: 30rpx auto;}
.userinfoNickname .score{color: #ffd93b;}
/* 长方形进度条 */
.progressBar{padding:20rpx 120rpx 20rpx 120rpx;position: relative;}
.rightPrcent{position: absolute;left: 10rpx;top: 12rpx;color: #3686ff;font-size: 30rpx;}
.showRadius{color: #fff;border-radius: 100px;overflow:hidden;}
.showInfo{position: absolute;right: 10rpx;top: 14rpx;color: #3686ff;font-size: 30rpx;}



.myErrorBtn{width: 530rpx; height: 100rpx;line-height: 100rpx;background-color: #3686ff;color: #fff;border: none;border-radius:30px;margin: 60rpx auto;}
.submitBtn{width: 530rpx; height: 100rpx;line-height: 100rpx;background-color: #fff;color: #3686ff;border: none;border-radius: 30px;border: 1px solid #3686ff;}