<!--pages/collectionDetail/collectionDetail.wxml-->
<view class='containerBox'>
      <!-- 没有收藏的状态 -->
  <view class='noDataState' hidden='{{bookmarkList == "" ? false : true}}'>
      <image src='/images/nocollection.jpg' class='noStateImg'></image>
      <view class='info'>暂无收藏</view>
  </view>    
  <view class='DetailBox' hidden='{{bookmarkList == "" ? true : false}}' bindtap='jumpTocollectionDetailResult' data-totalCount='{{bookmarkList.length}}'>
    <view class='chapter'>{{title}}</view>
    
    <view class='questionList' wx:for='{{bookmarkList}}' wx:for-index='index' wx:for-item='bookmarkList' wx:key='*this' id='{{index}}'>
      <text class='question' id='{{index}}'>{{bookmarkList.question_info.question_id}}.{{bookmarkList.question_info.title}}</text>
      <!-- 收藏 -->
      <view class='collect'>
        <image class="collectIcon" src="/images/collection2.png" data-id='{{bookmarkList.question_id}}'  catchtap='deleteCollection'></image>  
      </view>
    </view>

  </view>
</view>
